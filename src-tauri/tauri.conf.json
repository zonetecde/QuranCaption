{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Quran Caption",
	"version": "3.1.4",
	"identifier": "com.qurancaption",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "Quran Caption",
				"height": 768,
				"width": 1024,
				"minWidth": 1024,
				"minHeight": 768,
				"resizable": true,
				"fullscreen": false,
				"decorations": false
			}
		],
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": { "allow": ["**", "*"] }
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "appimage", "dmg", "nsis"],
		"resources": ["binaries/**/*"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"entitlements": null,
			"exceptionDomain": "",
			"frameworks": [],
			"providerShortName": null,
			"signingIdentity": null,
			"hardenedRuntime": true,
			"minimumSystemVersion": "10.13"
		},
		"linux": {
			"deb": {
				"depends": ["libc6", "libgtk-3-0", "libwebkit2gtk-4.0-37"]
			}
		}
	}
}
